<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/grey_bg">

    <TextView

        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginBottom="@dimen/dimen_50_dp"
        android:text="@string/my_family"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="@dimen/dimen_16_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_16_dp"
        app:cardElevation="@dimen/dimen_16_dp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_292_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_16_dp"
        app:cardElevation="@dimen/dimen_16_dp"
        app:layout_constraintTop_toBottomOf="@id/home_card1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_292_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_16_dp"
        app:cardElevation="@dimen/dimen_16_dp"
        app:layout_constraintTop_toBottomOf="@id/home_card2" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card4"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_292_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_16_dp"
        app:cardElevation="@dimen/dimen_16_dp"
        app:layout_constraintTop_toBottomOf="@id/home_card3" />




</androidx.constraintlayout.widget.ConstraintLayout>